borde_azul = #22BCE0
gris_oscuro = #444
naranja_color = #DD4F24
body
	background #E8E8E8
	font-family Arial
	color gris_oscuro
	font-size 16px

header
	background gris_oscuro
	color white
	padding 0.5em
	position relative

	.logo
		border-right 1px solid borde_azul
		width 60px
		float left
		img 
			width 52px

	.titular
		margin 0px 80px 0px 70px
		.titulo
			font-size 18px
			font-weight normal
			margin 0
			padding 0

	.usuario
		position absolute
		top 10px
		right 10px
		.avatar
			img
				width 50px
				border-radius 50%

		.flechita
			background naranja_color
			color white
			display block
			text-align right
			position absolute
			width 2em
			top 15%
			left 0

nav
	background borde_azul